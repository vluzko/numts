{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "numts/*.ts",
    "spec/prop_spec/*.ts",
    "spec/*.ts"
  ],
  "exclude": [
    "node_modules/"
  ]
}
